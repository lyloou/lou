<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyloou.test.douban.DouBanActivity">

    <include layout="@layout/item_douban_empty"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_douban"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lyloou.test.common.EmptyRecyclerView
            android:id="@+id/erv_douban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            tools:listitem="@layout/item_douban"/>

    </android.support.v4.widget.SwipeRefreshLayout>


</FrameLayout>
